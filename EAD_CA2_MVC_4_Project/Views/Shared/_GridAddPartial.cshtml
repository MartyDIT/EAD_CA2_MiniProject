@model EAD_CA2_MiniProject.Model.StudentModel



@using (Ajax.BeginForm("AddStudent", "Home", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "result" }))
{
    <div class="form-group" style="display:none">
        <label for="exampleInputEmail1">StudentID</label>
        @Html.TextBoxFor(x => x.StudentID, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Student Name</label>
        @Html.TextBoxFor(x => x.StudentName, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Date of Birth</label>
        @Html.TextBoxFor(x => x.DateOfBirth, new { @class = "form-control", @type = "date", required = "required" })
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Height</label>
        @Html.TextBoxFor(x => x.Height, new { @class = "form-control", type = "number", step = "0.01", required = "required" })
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Weight</label>
        @Html.TextBoxFor(x => x.Weight, new { @class = "form-control", type = "number", step = "0.01", required = "required" })
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
}

<div id="result"></div>
