@model EAD_CA2_MiniProject.Model.StudentModel



@using (Ajax.BeginForm("UpdateStudent", "Home", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "result" }))
{
    <div class="form-group" style="display:none">
        <label for="StudentID">StudentID</label>
        @Html.TextBoxFor(x => x.StudentID, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Student Name">Student Name</label>
        @Html.TextBoxFor(x => x.StudentName, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="Date of Birth">Date of Birth</label>
        @Html.TextBoxFor(x => x.DateOfBirth, "{0:s}", new { @class = "form-control", @type = "datetime-local", required = "required" })
    </div>
    <div class="form-group">
        <label for="Height">Height</label>
        @Html.TextBoxFor(x => x.Height, new { @class = "form-control", type = "number", step = "0.01", required = "required" })
    </div>
    <div class="form-group">
        <label for="Weight">Weight</label>
        @Html.TextBoxFor(x => x.Weight, new { @class = "form-control", type = "number", step = "0.01", required = "required" })
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
}

<div id="result"></div>
